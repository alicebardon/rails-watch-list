<h1><%= @list.name %> movie List</h1>

<ul>
  <% @bookmarks.each do |bookmark| %>
  <li><%= bookmark.movie.title %>
  <%= image_tag bookmark.movie.poster_url, width: 200 %>
  <%= bookmark.comment %>
  <%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<%= link_to "Go back to full list", lists_path %>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
